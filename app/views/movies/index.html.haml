-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag   movies_path ,:method => :get ,id:"ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    =check_box_tag "rating[#{rating}]" , "1",(@ratings.include? rating),id:"ratings_#{rating}"

  = submit_tag 'Refresh' ,id:"ratings_submit"

  
%table#movies
  %thead
    %tr
  - if @issort=="titlesort"
    %th.hilite#title_header= link_to "Movie Title","/movies?sort=titlesort"
  - else
    %th#title_header= link_to "Movie Title","/movies?sort=titlesort"

  %th Rating
  - if @issort=="datesort"
    %th.hilite#release_date_header= link_to "Release Date", "/movies?sort=datesort"
  - else
    %th#release_date_header= link_to "Release Date", "/movies?sort=datesort"
  %th More Info
  
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)
            
= link_to 'Add new movie', new_movie_path

